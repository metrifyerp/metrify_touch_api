{
  "name": "slim/slim-skeleton",
  "description": "Construalianza.app API",
  "keywords": [
    "microframework",
    "rest",
    "router"
  ],
  "homepage": "https://www.construalianza.app/",
  "license": "MIT",
  "authors": [
    {
      "name": "Construalianza.app",
      "email": "malianza.ventas@gmail.com",
      "homepage": "https://www.construalianza.app/"
    }
  ],
  "require": {
    "php": ">=7.1",
    "slim/slim": "^3.1",
    "slim/php-view": "^2.0",
    "monolog/monolog": "^1.17",
    "ext-pdo": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": ">=5.0"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "scripts": {
    "start": "php -S localhost:8080 -t public",
    "test": "phpunit"
  }
}
